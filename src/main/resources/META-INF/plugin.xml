<idea-plugin>
    <id>com.zeke.wong.neck-protect</id>
    <name>NeckProtector</name>
    <version>1.0</version>
    <vendor email="760553478@qq.com" url="http://www.starcor.com">Starcor</vendor>

    <description><![CDATA[
      <h1>Neck Protector</h1>
      <br>
      <p><b>A warm plugin that reminds you to relax</b></p>
      <p> <b>一款可以定时提醒你休息放松的插件，动动脖子、放松肩膀，远离肩颈困扰 ：）</b>
      <br>
       支持版本 >= 2017.1 (Branch number: 171 )
      </p><br>
      GitHub: <a href="https://github.com/kivensolo/neck-protector">https://github.com/kivensolo/neck-protector</a>
     ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="171"/>

    <!--应用级别组件-->
    <application-components>
        <component>
            <interface-class>com.zeke.cd.IApplicationComponent</interface-class>

            <implementation-class>com.zeke.cd.BaseApplicationComponent</implementation-class>
        </component>
    </application-components>

 <!--   <depends>
        com.intellij.modules.lang
    </depends>-->

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable groupId="other" instance="com.zeke.cd.settings.PluginSettingPage"/>

        <!--href="https://www.jetbrains.org/intellij/sdk/docs/basics/persisting_state_of_components.html-->
        <applicationService serviceInterface="com.zeke.cd.components.IConfigComponent"
                            serviceImplementation="com.zeke.cd.components.ConfigComponentImpl"/>
    </extensions>

    <actions>
        <!-- 自定义分组 如在Help分组后添加一个名为ZeKePlugins的分组，该分组下可放置多个Action -->
        <group id="KingZPlugin.PluginSet" text="ZeKePlugins" description="The plugin set by zekeWong">
            <add-to-group group-id="MainMenu" anchor="last"/>

            <action id="ShowOpacityTable" class="com.zeke.cd.actions.ShowOpacityTableAction"
                    text="不透明度16进制表" description="展示不透明度对应的16进制表">
                <!--<keyboard-shortcut keymap="$default" first-keystroke="shift P"/>-->
            </action>
        </group>

        <!--将Action 添加至已有的分组中-->
      <!--  <action id="NeckProtector.ShowOpacityTableTool" class="com.zeke.cd.actions.ShowOpacityTableAction"
                    text="不透明度16进制表" description="展示不透明度对应的16进制表">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>-->
    </actions>
</idea-plugin>